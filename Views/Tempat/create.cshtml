@model WebSpasialView.Models.TempatViewModel

@{
    ViewData["Title"] = "Halaman Tambah Data";
}

<h2>Tambah Data Tempat</h2>

<a asp-action="Index" style="margin-left: 1200px">
    <button type="button" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Kembali
    </button>
</a>

<br />
<br />

<hr />
<div class="row">
    <form asp-action="create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="nama_pemilik" class="control-label mb-3"></label>
                    <input asp-for="nama_pemilik" class="form-control mb-3" />
                    <span asp-validation-for="nama_pemilik" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nama_tempat" class="control-label mb-3"></label>
                    <input asp-for="nama_tempat" class="form-control mb-3" />
                    <span asp-validation-for="nama_tempat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="alamat" class="control-label mb-3"></label>
                    <input asp-for="alamat" class="form-control mb-3" />
                    <span asp-validation-for="alamat" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="jenis_tempat" class="control-label mb-3"></label>
                    <input asp-for="jenis_tempat" class="form-control mb-3" />
                    <span asp-validation-for="jenis_tempat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="latitude" class="control-label mb-3"></label>
                    <input asp-for="latitude" class="form-control mb-3" />
                    <span asp-validation-for="latitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="longitude" class="control-label mb-3"></label>
                    <input asp-for="longitude" class="form-control mb-3" />
                    <span asp-validation-for="longitude" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mt-3" style="text-align:center;">
            <button class="btn btn-danger mr-2" type="reset"><i class="fa-solid fa-arrows-rotate"></i> Reset</button>
            <button class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> Simpan</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
